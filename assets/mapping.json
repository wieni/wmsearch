{
    "settings": {
        "index.mapper.dynamic": false,
        "index.number_of_shards": 1,
        "index.number_of_replicas": 0,
        "analysis": {
            "analyzer": {
                "ascii": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "asciifolding",
                        "lowercase"
                    ]
                },
                "html": {
                    "tokenizer": "standard",
                    "filter": [
                        "asciifolding",
                        "lowercase"
                    ],
                    "char_filter": [
                        "html_strip"
                    ]
                },
                "ngram": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "asciifolding",
                        "lowercase",
                        "ngram"
                    ]
                }
            },
            "filter": {
                "ngram": {
                    "type": "edge_ngram",
                    "min_gram": 2,
                    "max_gram": 20
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "dynamic": "strict",
            "_all": {
                "enabled": false
            }
        },
        "doc": {
            "dynamic": false,
            "_all": {
                "enabled": false
            },
            "properties": {
                "docType": {
                    "type": "keyword"
                },
                "type": {
                    "type": "text"
                },
                "bundle": {
                    "type": "text"
                },
                "language": {
                    "type": "text"
                },
                "suggest": {
                    "type": "completion",
                    "analyzer": "ascii",
                    "search_analyzer": "standard",
                    "contexts": [
                        {
                            "name": "language",
                            "type": "category",
                            "path": "language"
                        },
                        {
                            "name": "bundle",
                            "type": "category",
                            "path": "bundle"
                        },
                        {
                            "name": "type",
                            "type": "category",
                            "path": "type"
                        }
                    ]
                },
                "title": {
                    "analyzer": "ngram",
                    "search_analyzer": "ascii",
                    "type": "text",
                    "boost": 2
                },
                "terms": {
                    "analyzer": "ngram",
                    "search_analyzer": "ascii",
                    "type": "text",
                    "boost": 1.5
                },
                "intro": {
                    "analyzer": "ngram",
                    "search_analyzer": "ascii",
                    "type": "text",
                    "boost": 1.2
                },
                "body": {
                    "analyzer": "html",
                    "search_analyzer": "ascii",
                    "type": "text"
                },
                "created": {
                    "type": "date",
                    "format": "epoch_second"
                },
                "changed": {
                    "type": "date",
                    "format": "epoch_second"
                }
            }
        }
    }
}
